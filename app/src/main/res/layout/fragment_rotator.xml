<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/content_desc_main_image"
    android:visibility="visible"
    tools:context=".ui.rotateImage.RotatorFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="338dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_desc_main_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/beautiful_nature_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262" />



    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentRotate"
        android:name="com.example.photoeditor.ui.rotateImage.RotatorFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:contentDescription="@string/slider"
        android:stepSize="90.0"
        android:valueFrom="0.0"
        android:valueTo="360.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="73dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/textView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/slider"
        app:layout_constraintEnd_toEndOf="@+id/slider"
        app:layout_constraintStart_toStartOf="@+id/slider"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>