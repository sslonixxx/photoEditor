<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.unsharpMask.UnsharpFragment">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:fontFamily="@font/kudry_font"
        android:text="@string/amount"
        android:textColor="@color/woodsmoke" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:stepSize="90.0"
        android:valueFrom="0.0"
        android:valueTo="360.0"
        android:thumb="@drawable/heart" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="14sp"
        android:fontFamily="@font/kudry_font"
        android:text="@string/radius"
        android:textColor="@color/woodsmoke" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:stepSize="90.0"
        android:valueFrom="0.0"
        android:valueTo="360.0"
        android:thumb="@drawable/heart"
        app:thumbStrokeWidth="2dp"
        app:thumbColor="@color/woodsmoke" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="14sp"
        android:fontFamily="@font/kudry_font"
        android:text="@string/threshold"
        android:textColor="@color/woodsmoke" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:stepSize="90.0"
        android:valueFrom="0.0"
        android:valueTo="360.0"
        android:thumb="@drawable/heart"
        app:thumbStrokeWidth="2dp"
        app:thumbColor="@color/woodsmoke" />

</LinearLayout>
