<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.colorFilters.ColorFiltersFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/blackAndWhite"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:contentDescription="Black and White Filter"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/black" />

            <ImageButton
                android:id="@+id/mosaic"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:contentDescription="mosaic"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/mosaic" />

            <ImageButton
                android:id="@+id/gaussingBlurFilter"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:contentDescription="Gaussing Blur Filter"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/gaussin"/>
            <ImageButton
                android:id="@+id/noir"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:contentDescription="noir"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/noir"/>
            <ImageButton
                android:id="@+id/warm"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:contentDescription="warm"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/warm" />
        </LinearLayout>


    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>